{% extends "base.html.twig" %}

{% block body %}
    <div class="container">
        <h1 class="my-5">Search City</h1>
        {{ form(form) }}
        <div class="my-5">
            {% if (showResults) %}
                {% if (cities|length > 0) %}
                    <h1>Results:</h1>
                    <ul>
                        {% for city in cities %}
                            <li>{{ city }}</li>
                        {% endfor %}
                    </ul>
                {% else %}
                    -- No results --
                {% endif %}
            {% endif %}
        </div>
    </div>
{% endblock %}